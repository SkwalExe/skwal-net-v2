set_real_ip_from 192.168.1.10;
real_ip_header X-Forwarded-For;


server {
        # Redirect http to https
        listen 80;
        listen [::]:80;
        server_name status.skwal.net;
        return 301 https://$host$request_uri;
}

server {
        listen 443 ssl;
        listen [::]:443 ssl;
        server_name status.skwal.net;
        
        location / {
            proxy_pass http://127.0.0.1:3001;
        }

        include /etc/nginx/ssl.conf;
}
